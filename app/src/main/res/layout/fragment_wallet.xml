<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_fragment_title"
                style="@style/TextTitleStyleOnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_view_children"
                android:layout_marginTop="20dp"
                android:text="@string/portfolio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/dark_mode_switch"
                style="@style/TextLargeOnTertiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_horizontal_view_children"
                android:background="@drawable/shape_medium_rounded_corners"
                android:backgroundTint="@color/md_theme_dark_tertiaryContainer"
                android:padding="@dimen/padding_tertiary_container"
                android:text="@string/dark_mode"
                android:textColor="@color/md_theme_dark_onTertiaryContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_fragment_title"
                app:thumbTint="@color/md_theme_dark_onTertiaryContainer"
                app:trackTint="@color/md_theme_dark_tertiary" />

            <com.aroman.mimwallet.utils.pie_chart_view.PieChartView
                android:id="@+id/pie_chart"
                android:layout_width="0dp"
                android:layout_height="@dimen/pie_chart_height"
                android:layout_marginStart="@dimen/margin_horizontal_view_children"
                android:layout_marginTop="@dimen/margin_horizontal_view_children"
                android:layout_marginEnd="@dimen/margin_horizontal_view_children"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_fragment_title" />

            <FrameLayout
                android:id="@+id/container_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_vertical_header"
                android:paddingBottom="@dimen/padding_vertical_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pie_chart">

                <include
                    android:id="@+id/included_header"
                    layout="@layout/header_simple" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_coin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_view_children"
                android:layout_marginEnd="@dimen/margin_horizontal_view_children"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_header"
                tools:listitem="@layout/item_coin" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:elevation="1dp"
        android:id="@+id/shadow_theme_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>